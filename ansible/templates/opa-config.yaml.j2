services:
  hnt_storage_account:
    url: "https://hacknocturne{{ target_env | lower }}.blob.core.windows.net/"
    headers:
      x-ms-version: 2020-04-08
    response_header_timeout_seconds: 5
    credentials:
      azure_managed_identity: {}

bundles:
  access_bundle:
    service: hnt_storage_account
    resource: opa/prod/bundle.tar.gz
    persist: true
    polling:
      min_delay_seconds: 30
      max_delay_seconds: 60
